# debain
sudo -i
sudo apt update && sudo apt install wget unzip
apt install vim
wget
https://kb.nssurge.com/surge-knowledge-base/zh/release-notes/snell
sudo unzip
-d /usr/local/bin
chmod +x /usr/local/bin/snell-server

sudo snell-server --wizard -c /etc/snell-server.conf

or sudo vim /etc/snell-server.conf

sudo vim /lib/systemd/system/snell.service
[Unit]
Description=Snell Proxy Service
After=network.target

[Service]
Type=simple
User=nobody
Group=nogroup
LimitNOFILE=32768
ExecStart=/usr/local/bin/snell-server -c /etc/snell-server.conf

[Install]
WantedBy=multi-user.target

sudo systemctl daemon-reload
sudo systemctl enable snell
sudo systemctl start snell
sudo systemctl status snell

end snell finish

vim quic 
:q!


# 1. Allow incoming traffic on port 35649 for TCP (standard connections)
sudo ufw allow 35649/tcp

# 2. Allow incoming traffic on port 35649 for UDP (QUIC and other relays)
sudo ufw allow 35649/udp

sudo ufw status verbose

